@model Web_LW.Models.Utilisateur

<!DOCTYPE html>
<html>
<head>
    <title>Supprimer - Version 2</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css?v=@DateTime.Now.Ticks" rel="stylesheet">
    <style>
        body { background-color: #f8f9fa; }
        .delete-container { max-width: 600px; margin: 50px auto; }
    </style>
</head>
<body>
    <div class="container delete-container">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h2 class="mb-0">⚠️ Supprimer l'utilisateur</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h4>Attention!</h4>
                    <p>Voulez-vous vraiment supprimer <strong>@Model.Nom</strong> ?</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Téléphone:</strong> @Model.Telephone</p>
                </div>

                <form method="post" action="/Utilisateurs/Delete/@Model.Id">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger btn-lg">
                            🗑️ Confirmer la suppression
                        </button>
                        <a href="/Utilisateurs/Index" class="btn btn-secondary btn-lg">
                            ← Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>