@model IEnumerable<Web_LW.Entities.Utilisateur>

<link rel="stylesheet" href="~/css/admin.css" />

<div class="admin-container">
    <!-- Header -->
    <div class="admin-header">
        <div class="admin-header-icon"><i class="bi bi-people"></i></div>
        <h1>Gestion des utilisateurs</h1>
        <p>Administrez les comptes utilisateurs et leurs permissions sur la plateforme</p>
    </div>

    <!-- Action button -->
    <div class="mb-4">
        <a class="btn-modern btn-modern-primary" href="/Utilisateurs/Create">
            <i class="bi bi-plus-lg"></i> Ajouter un utilisateur
        </a>
    </div>

    <!-- Table -->
    <div class="table-section">
        <div class="table-section-header">
            <div>
                <h2 class="table-section-title">Liste des utilisateurs</h2>
                <p class="table-section-subtitle">@Model.Count() utilisateur(s) enregistrï¿½(s)</p>
            </div>
        </div>
        <div class="table-responsive">
            <table class="modern-table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Tï¿½lï¿½phone</th>
                        <th>Statut</th>
                        <th>Rï¿½le</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Any())
                {
                    foreach (var u in Model)
                    {
                        <tr>
                            <td><strong>@u.Nom</strong></td>
                            <td>@u.Email</td>
                            <td>@u.Telephone</td>
                            <td>
                                @if (u.IsActive)
                                {
                                    <span class="status-badge status-badge-active">Actif</span>
                                }
                                else
                                {
                                    <span class="status-badge status-badge-inactive">Inactif</span>
                                }
                            </td>
                            <td>
                                @if (u.Role == "Admin")
                                {
                                    <span class="status-badge" style="background: rgba(239, 68, 68, 0.1); color: var(--admin-danger);"><i class="bi bi-shield-fill-check"></i> @u.Role</span>
                                }
                                else
                                {
                                    <span class="status-badge" style="background: rgba(59, 130, 246, 0.1); color: var(--admin-info);"><i class="bi bi-person"></i> @u.Role</span>
                                }
                            </td>
                            <td class="text-end">
                                <a href="/Utilisateurs/Details/@u.Id" class="btn-modern btn-modern-secondary btn-modern-sm me-1">
                                    <i class="bi bi-eye"></i> DÃ©tails
                                </a>
                                <a href="/Utilisateurs/Edit/@u.Id" class="btn-modern btn-modern-secondary btn-modern-sm me-1">
                                    <i class="bi bi-pencil"></i> Modifier
                                </a>
                                <a href="/Utilisateurs/Delete/@u.Id" class="btn-modern btn-modern-danger btn-modern-sm">
                                    <i class="bi bi-trash"></i> Supprimer
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">
                            <div class="empty-state">
                                <div class="empty-state-icon">ðŸ‘¤</div>
                                <p class="empty-state-text">Aucun utilisateur trouvÃ©</p>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
