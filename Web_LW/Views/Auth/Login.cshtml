@model Web_LW.Models.LoginViewModel

<h2>Connexion</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post">

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Mot de passe</label>
        <input asp-for="MotDePasse" type="password" class="form-control" />
    </div>

    <button class="btn btn-primary mt-3">Se connecter</button>
    <a asp-action="Register" class="btn btn-link mt-3">Creer un compte</a>
</form>
