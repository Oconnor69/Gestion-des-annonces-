@model Web_LW.Models.Categorie

<link rel="stylesheet" href="~/css/admin.css" />

<div class="admin-container">
    <!-- Header -->
    <div class="admin-header">
        <div class="admin-header-icon">✏️</div>
        <h1>Modifier la catégorie</h1>
        <p>Éditez les détails de la catégorie #@Model.Id</p>
    </div>

    <!-- Form -->
    <div class="form-modern">
        <form method="post">
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="mb-4">
                <label class="form-label">🏷️ Nom de la catégorie</label>
                <input type="text" name="Nom" class="form-control" value="@Model.Nom" placeholder="Ex: Voitures, Immobilier..." required />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn-modern btn-modern-primary">
                    💾 Enregistrer les modifications
                </button>
                <a href="/Categories/Index" class="btn-modern btn-modern-secondary">
                    ← Annuler
                </a>
            </div>
        </form>
    </div>
</div>
