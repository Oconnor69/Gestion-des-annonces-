                    </select>
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label">Description</label>
                <textarea asp-for="Description" name="annonceModif.Description" class="form-control" rows="5"></textarea>
            </div>

            @if (Model.Voiture != null)
            {
                <hr style="margin: 2rem 0; border-top: 2px solid var(--admin-light);" />
