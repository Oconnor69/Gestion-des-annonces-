            <h3 style="font-weight: 700; margin-bottom: 1.5rem; color: var(--admin-dark);"><i class="bi bi-info-circle"></i> Informations générales</h3>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Titre</label>
                    <input asp-for="Titre" name="annonceModif.Titre" class="form-control" />
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Prix (DH)</label>
                    <input asp-for="Prix" name="annonceModif.Prix" class="form-control" />
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Ville</label>
                    <input asp-for="Ville" name="annonceModif.Ville" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 mb-3">
                    <label class="form-label">Statut</label>
                    <select asp-for="Statut" name="annonceModif.Statut" class="form-select">
